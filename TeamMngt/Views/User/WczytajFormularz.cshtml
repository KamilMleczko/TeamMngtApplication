@ViewData["nazwa"]
@ViewData["hasło"]

<form asp-action="WczytajFormularz">
  <div class="form-group">
    <label for="nazwa">Wprowadź nazwę użytkownika:</label>
    <input name="nazwa" id="nazwa" class="form-control" />
  </div>
  <div class="form-group">
    <label for="hasło">Wprowadź hasło:</label>
    <input type="password" name="hasło" id="hasło" class="form-control" />
  </div>
  <input type="submit" value="Zaloguj się" class="btn btn-primary" />
</form>