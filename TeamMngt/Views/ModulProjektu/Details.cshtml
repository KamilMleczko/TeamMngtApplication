@model TeamMngt.Models.ModulProjektu

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>ModulProjektu</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataRozpoczecia)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataRozpoczecia)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
    </dl>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
    <h4></h4>
    <h4>Zadania należące do modułu:</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Nazwa</th>
                <th>Deadline</th>
                <th>Czas Wykonania</th>
                <th>Opis</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var zadanie in Model.Zadania)
        {
            <tr>
                <td>@zadanie.Nazwa</td>
                <td>@zadanie.Deadline.ToString()</td>  
                <td>@zadanie.CzasWykonania</td>
                 <td>@zadanie.Opis</td>
            </tr>
        }
        </tbody>
        </table>
</div>

