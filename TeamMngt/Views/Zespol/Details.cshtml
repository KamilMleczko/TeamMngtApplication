@model TeamMngt.Models.Zespol

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Zespol</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nazwa)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nazwa)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opis)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opis)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


<h4></h4>
<h4>Pracownicy należący do Zespołu:</h4>
<table class="table">
    <thead>
    <tr>
        <th>Imie</th>
        <th>Nazwisko</th>
        <th>Stanowsiko</th>
        <th>Email</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var zadanie in Model.Pracownicy)
    {
        <tr>
            <td>@zadanie.Imie</td>
            <td>@zadanie.Nazwisko</td>
            <td>@zadanie.Stanowsiko</td>
            <td>@zadanie.Email</td>
        </tr>
    }
    </tbody>
</table>

