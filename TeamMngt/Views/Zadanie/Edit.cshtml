@model TeamMngt.Models.Zadanie

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Zadanie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CzasWykonania" class="control-label"></label>
                <input asp-for="CzasWykonania" class="form-control" />
                <span asp-validation-for="CzasWykonania" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Deadline" class="control-label"></label>
                <input asp-for="Deadline" class="form-control" />
                <span asp-validation-for="Deadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            
             <div class="form-group">
                            <label asp-for="Pracownik" class="control-label"></label>
                            <select asp-for="Pracownik" class="form-control" asp-items="ViewBag.PracownicyID">
                                <option value="-1">-- Przydziel Pracownika --</option>
                            </select>
                            <span asp-validation-for="Pracownik" class="text-danger"></span>
                        </div>
                        
                        
                        <div class="form-group">
                            <label asp-for="ModulProjektu" class="control-label"></label>
                            <select asp-for="ModulProjektu" class="form-control" asp-items="ViewBag.ModulyID">
                                <option value="-1">-- Wybierz moduł o którego należeć będzie zadanie --</option>
                            </select>
                            <span asp-validation-for="ModulProjektu" class="text-danger"></span>
                        </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
